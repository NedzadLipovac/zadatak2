@model Zdatak2.ViewModels.Faktura.FakturaStavkaDodajVM

@{
    ViewBag.Title = "DodajStavku";
}

<h2>Dodaj Stavku</h2>


@using (Html.BeginForm( "SnimiStavku","Faktura"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.FakturaId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.FakturaId, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FakturaId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Kolicina, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Kolicina, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Kolicina, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.stavke, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.StavkaId, new SelectList(Model.stavke, "Value", "Text"), "-Odaberi Stavku-", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.StavkaId, "", new { @class = "text-danger" })

            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-success" value="Submit"/>
            </div>
        </div>
    </div>
}


<script>

    $("#btnSubmit").click(function () {

        var form = $("#form");

        $.ajax({
            url: "@Url.Action("SnimiStavku", "Faktura")",
            type: "POST",
            data: form.serialize(),
            success: function (result) {
                $("#ajaxDiv").html(result);
            }
        });

    });


</script>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
